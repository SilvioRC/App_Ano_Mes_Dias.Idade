<?xml version="1.0" encoding ="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_Ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a Idade - Ano(s)"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txt_Mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a Idade - Mes(es)"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txt_Dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a Idade - Dia(s)"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_Converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelho_escuro"
        android:text="Converter para Dias"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_Resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txt_AnoNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o ano que estamos "
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txt_Decada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua idade em anos"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_ConverterDecadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/laranja_escuro"
        android:text="Ver que ano vocÃª nasceu"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_ResultadoDecadas"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:textSize="25sp" />
</LinearLayout>
